{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
    ],
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "isolatedModules": false,
    "jsx": "react",
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "__tests__"
  ]
}
